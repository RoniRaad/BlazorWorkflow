    private async Task HandleExecuteWorkflow()
    {
        if (SelectedWorkflow == null) return;

        var workflow = SelectedWorkflow;
        var environmentVariables = EnvVarService.GetAllVariables(selectedEnvironment);
        var context = new GraphExecutionContext()
        {
            Parameters = workflow.Inputs.ToFrozenDictionary(),
            EnvironmentVariables = environmentVariables.ToFrozenDictionary()
        };

        // Create running execution record
        var execution = new WorkflowExecution
        {
            Id = Guid.NewGuid().ToString(),
            ExecutedAt = DateTime.Now,
            IsRunning = true,
            Success = false,
            Duration = TimeSpan.Zero,
            Output = []
        };

        workflow.PreviousExecutions.Add(execution);
        WorkflowService.UpdateWorkflow(workflow);
        await InvokeAsync(StateHasChanged);

        try
        {
            await workflow.FlowGraph.Run(context).ConfigureAwait(false);

            var output = context?.SharedContext.GetByPath("workflow.output");
            var jsonObject = output?.AsObject().ToDictionary(x => x.Key, x => (object)x.Value);

            // Update execution with results
            execution.IsRunning = false;
            execution.Success = !workflow.FlowGraph.Nodes.Any(x => x.Value.LastException is not null);
            execution.Duration = DateTimeOffset.Now - context!.StartTime;
            execution.Output = jsonObject ?? [];

            if (!execution.Success)
            {
                var failedNode = workflow.FlowGraph.Nodes.FirstOrDefault(x => x.Value.LastException is not null).Value;
                execution.ErrorMessage = failedNode?.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            execution.IsRunning = false;
            execution.Success = false;
            execution.Duration = DateTimeOffset.Now - context!.StartTime;
            execution.ErrorMessage = ex.Message;
        }

        workflow.ModifiedAt = DateTime.Now;
        WorkflowService.UpdateWorkflow(workflow);
        await InvokeAsync(StateHasChanged);

        // Notify parent that execution completed
        if (OnWorkflowExecuted.HasDelegate)
        {
            await OnWorkflowExecuted.InvokeAsync(execution);
        }
    }

    private void HandleRemoveExecution(string executionId)
    {
        if (SelectedWorkflow == null) return;

        var executionToRemove = SelectedWorkflow.PreviousExecutions.FirstOrDefault(e => e.Id == executionId);
        if (executionToRemove != null)
        {
            SelectedWorkflow.PreviousExecutions.Remove(executionToRemove);
            WorkflowService.UpdateWorkflow(SelectedWorkflow);

            // Adjust current page if needed
            var totalExecutions = SelectedWorkflow.PreviousExecutions.Count;
            var totalPages = (int)Math.Ceiling(totalExecutions / (double)executionsPerPage);
            if (currentExecutionPage >= totalPages && currentExecutionPage > 0)
            {
                currentExecutionPage = totalPages - 1;
            }

            StateHasChanged();
        }
    }


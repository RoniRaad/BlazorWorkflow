    private void HandleImportConfirm()
    {
        if (string.IsNullOrWhiteSpace(_importJson))
        {
            _importError = "Please paste workflow JSON";
            return;
        }

        try
        {
            _importError = null;

            // Deserialize the workflow
            var nodes = FlowSerializer.DeserializeFlow(_importJson, out var metadata);

            if (nodes.Count == 0)
            {
                _importError = "No valid nodes found in the workflow. The workflow may contain only removed/missing nodes.";
                return;
            }

            // Always create a new workflow on import
            // Generate a unique name if one with the same name already exists
            var workflowName = GetUniqueWorkflowName(metadata.FlowName);

            // Create a new workflow for the import
            var targetWorkflow = new WorkflowInfo
            {
                Id = Guid.NewGuid().ToString(),
                Name = workflowName,
                Description = string.Empty,
                CreatedAt = DateTime.Now,
                ModifiedAt = DateTime.Now,
                FlowGraph = new Graph(),
                Inputs = new Dictionary<string, string>(),
                PreviousExecutions = new List<WorkflowExecution>(),
                IncludeAsNode = false
            };
            WorkflowService.AddWorkflow(targetWorkflow);
            _workflowsCache.Add(targetWorkflow);
            selectedWorkflowId = targetWorkflow.Id;

            // Clear existing nodes and import new ones
            targetWorkflow.FlowGraph.Nodes.Clear();
            foreach (var node in nodes)
            {
                targetWorkflow.FlowGraph.Nodes[node.DrawflowNodeId] = node;
            }

            // Update metadata if present
            if (metadata.Metadata.TryGetValue("description", out var description))
            {
                targetWorkflow.Description = description?.ToString() ?? string.Empty;
            }

            if (metadata.Metadata.TryGetValue("inputs", out var inputs))
            {
                // Handle different possible types from JSON deserialization
                if (inputs is Dictionary<string, object> inputsDict)
                {
                    targetWorkflow.Inputs = inputsDict.ToDictionary(kvp => kvp.Key, kvp => kvp.Value?.ToString() ?? string.Empty);
                }
                else if (inputs is System.Text.Json.JsonElement jsonElement && jsonElement.ValueKind == System.Text.Json.JsonValueKind.Object)
                {
                    targetWorkflow.Inputs = new Dictionary<string, string>();
                    foreach (var prop in jsonElement.EnumerateObject())
                    {
                        targetWorkflow.Inputs[prop.Name] = prop.Value.ToString();
                    }
                }
            }

            targetWorkflow.ModifiedAt = DateTime.Now;
            WorkflowService.UpdateWorkflow(targetWorkflow);

            _showImportModal = false;
            _importJson = null;

            StateHasChanged();
        }
        catch (Exception ex)
        {
            _importError = $"Import failed: {ex.Message}";
        }
    }

    private string GetUniqueWorkflowName(string baseName)
    {
        // Check if the base name already exists
        if (!Workflows.Any(w => w.Name.Equals(baseName, StringComparison.OrdinalIgnoreCase)))
        {
            return baseName;
        }

        // Find a unique name by appending a number
        int counter = 1;
        string candidateName;
        do
        {
            candidateName = $"{baseName} ({counter})";
            counter++;
        }
        while (Workflows.Any(w => w.Name.Equals(candidateName, StringComparison.OrdinalIgnoreCase)));

        return candidateName;
    }

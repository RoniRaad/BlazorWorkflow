@inherits LayoutComponentBase

<div class="app-container">
    <header class="app-header">
        <div class="header-content">
            <div class="header-brand">
                <svg class="brand-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                    <line x1="12" y1="22.08" x2="12" y2="12"></line>
                </svg>
                <div class="brand-text">
                    <h1 class="brand-title">BlazorExecutionFlow</h1>
                    <span class="brand-subtitle">Visual Workflow Designer</span>
                </div>
            </div>
            <nav class="header-nav">
                <a href="/" class="nav-link active" aria-label="Home">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    <span>Workflows</span>
                </a>
                <a href="https://github.com/RoniRaad/BlazorExecutionFlow" target="_blank" class="nav-link" aria-label="Documentation">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    <span>Docs</span>
                </a>
            </nav>
        </div>
    </header>

    <main class="app-main">
        <article class="app-content">
            @Body
        </article>
    </main>

    <footer class="app-footer">
        <div class="footer-content">
            <span class="footer-text">Built with Blazor & DrawFlow</span>
            <span class="footer-divider">•</span>
            <a href="https://github.com/anthropics/drawflow" target="_blank" class="footer-link">View on GitHub</a>
        </div>
    </footer>
</div>

<div id="blazor-error-ui">
    <span class="error-icon">⚠</span>
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">✕</a>
</div>
